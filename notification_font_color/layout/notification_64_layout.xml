<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_64_all_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notification_64_all"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="今日步数："
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/notification_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="0"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/update_image"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_step" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="#d2d2d2" />

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="0公里"
                android:textColor="#FD8C2A"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/notification_calory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="0千卡"
                android:textColor="#FF00FF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="0时0分"
                android:textColor="@color/my_blue"
                android:textSize="10sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>